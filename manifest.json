{
    "manifest_version": 2,
    "name": "One Page",
    "author": "pablotheissen",
    "short_name": "OnePage",
    "description": "__MSG_extDescription__",
    "default_locale": "en",
    "version": "0.3.8",
    "icons": {
        "128": "assets/logo-128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "16": "assets/icon-inactive-16.png",
            "32": "assets/icon-inactive-32.png",
            "128": "assets/icon-inactive-128.png"
        },
        "default_title": "__MSG_report__",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.arstechnica.com/*"
            ],
            "js": [
                "common.js",
                "websites/arstechnica_injector.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*.berliner-zeitung.de/*"
            ],
            "js": [
                "common.js",
                "websites/bz.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*.diply.com/*"
            ],
            "js": [
                "common.js",
                "websites/diply-com.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*.faz.net/*"
            ],
            "js": [
                "common.js",
                "websites/faz.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "*://*.golem.de/*"
            ],
            "js": [
                "common.js",
